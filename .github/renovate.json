{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helm-values": {
    "managerFilePatterns": ["**/*.yaml"]
  },
  "helmv3": {
    "registries": [
      {
        "url": "https://helm.truecharts.org/",
        "name": "truecharts",
        "type": "helm"
      }
    ],
    "managerFilePatterns": ["/(^|/)Chart\\.ya?ml$/", "**/releases.yaml"]
  },
  // Updated package rule to match any TrueCharts package
  "packageRules": [
    {
      "enabled": true,
      "matchPackageNames": ["truecharts/"],
      "matchUpdateTypes": ["minor", "patch", "major"],
      "matchManagers": ["helmv3", "helm-values"]
    }
  ],
  "schedule": ["at any time"]
}
