{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helm-values": {
    "managerFilePatterns": ["**/*.yaml"]
  },
  "helmv3": {
    "registryAliases": {
      "truecharts": "https://helm.truecharts.org/"
    },
    "managerFilePatterns": ["/(^|/)Chart\\.ya?ml$/", "**/releases.yaml"],
    "enabled": false
  },

  "packageRules": [
    {
      "enabled": true,
      "matchPackagePrefixes": ["truecharts/"],
      "matchUpdateTypes": ["minor", "patch", "major"],
      "matchManagers": ["helm-values"],
      "datasource": "helm",
      "looupName": "truecharts/{{depName}}"
    }
  ],
  "schedule": ["at any time"]
}
