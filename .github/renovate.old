{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helmv3": {
    "registryAliases": {
      "truecharts": "https://helm.truecharts.org/"
    },
    "managerFilePatterns": [
      "/(^|/)Chart\\.ya?ml$/",
      "**/releases.yaml"
    ],
    "enabled": false
  },
  "helm-values": {
    "managerFilePatterns": [
      "**/*.yaml"
    ]
  },
  "packageRules": [
    {
      "enabled": true,
      "matchManagers": [
        "helm-values"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ],
      "matchPackageNames": [
        "truecharts/{/,}**"
      ]
    }
  ],
  "schedule": [
    "at any time"
  ]
}
